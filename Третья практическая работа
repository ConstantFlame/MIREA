#include <iostream>
#include "fasad.h"
#include "adapter.h"

using namespace std;

int main()
{
	setlocale(0, "");
	fasad temp;
	adapter ad;
	string value;
	cout << "Веберите режим:\n1) Easy\n2) Medium\n3) Hard\n";
	getline(cin, value);
	if (value.size() == 1) value = ad.convert(value);
	string* result = temp.createComputer(value);
	if (*result != "Error\n")
	{
		for (int i = 0; i < 4; ++i) std::cout << result[i] << endl;
	}
	else cout << "Error\n";
	return 0;
}
